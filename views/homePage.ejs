<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">All Products</h1>
        <a class="btn btn-danger" href="/user/signInForm"> Sing in</a>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Libellé Produit</th>
                    <th>Prix</th>
                    <th>Description</th>
                    <th>Catégorie</th>
                </tr>
            </thead>
            <tbody>
                <% crudProduct.forEach(product => { %>
                <tr>
                    <td><%= product.libelle_produit %> </td>
                    <td><%= product.prix %>€</td>
                    <td><%= product.description %> </td>
                    <td><%= product.libelle_categorie %> </td>
                    <td><img src="<%= product.image %>"> </td>
                    <td>
                        <a href="/product/getProduct/<%= product.id_produit %> ">modify</a>
                        <a href="/product/deleteProduct/<%= product.id_produit %> ">delete</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <a class="btn btn-primary" href="/product/getCategory">add product</a>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>