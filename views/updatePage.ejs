        <label>Prix :</label>
        <input type = "number" name="prix" value="<%= updateProduct.prix %>">
        <label>Image :</label>
        <input type="text" name="image" value="<%= updateProduct.image %>">
        <button type="submit">modify</button>
    </form>
</body>
</html>
